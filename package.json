{
	"name": "publisher",
	"version": "0.1.0",
	"private": false,
	"description": "A container for taking a Frankenstein's monster of content-management solutions and altering a git repo as a result.",
	"repository": "https://github.com/Renddslow/publisher",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "dist/index.js",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "node build.js",
		"build:watch": "yarn build --watch",
		"start": "polkadot dist/index.js",
		"test:sermon": "curl -X POST http://localhost:3000 -H \"Content-Type: application/json\" -d \"{\\\"data\\\":{\\\"type\\\":\\\"sermon\\\"}}\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/body": "^5.1.0",
		"@types/node": "^16.0.0",
		"ava": "^3.15.0",
		"dotenv": "^10.0.0",
		"esbuild": "^0.12.20",
		"globby": "^10.0.2",
		"husky": "^7.0.0",
		"lint-staged": "^11.0.0",
		"mri": "^1.1.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5",
		"watchlist": "^0.2.3"
	},
	"dependencies": {
		"body": "^5.1.0",
		"catchify": "^2.6.1",
		"dot-prop": "^6.0.1",
		"frontmatter": "^0.0.3",
		"googleapis": "^80.1.0",
		"got": "^11.8.2",
		"polkadot": "^1.0.0",
		"slugify": "^1.5.3"
	}
}
